<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nutrition.MenuDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="Breakfast"
            android:textSize="24sp"
            android:textStyle="bold" />
        <EditText
            android:layout_margin="12dp"
            android:id="@+id/breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="18dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="12dp"
            android:id="@+id/lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="18dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="12dp"
            android:id="@+id/dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="18dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Snack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="12dp"
            android:id="@+id/snack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="18dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_margin="12dp"
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <pereira.agnaldo.previewimgcol.ImageCollectionView
            android:id="@+id/menuImageCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:backgroundColor="@color/white"
            app:baseRowHeight="150dp"
            app:imageMargin="1dp"
            app:pinchToZoom="true"
            app:showExternalBorderMargins="true"
            app:maxImagePerRow="3"
            app:maxRows="2" />
    </LinearLayout>
</ScrollView>