<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".report.ReportMainActivity">
    <TextView
        android:text="Reports"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/rp_topExcercise"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:drawableStart="@drawable/ic_baseline_assignment_24"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:textSize="24dp"
            android:layout_margin="10dp"
            android:text="Most used excercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rp_most_view_menu"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:drawableStart="@drawable/ic_baseline_assignment_24"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:textSize="24dp"
            android:layout_margin="10dp"
            android:text="Most view Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>